<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTVNET_Naranjos.Vistas.VHomePage"
             IconImageSource="hogar.png" NavigationPage.HasNavigationBar="False">
    
    <Grid RowDefinitions="*,*" Margin="0,10,0,0">
        <StackLayout>
            <Image Source="Logo_remasterTVNET.png"
                   HeightRequest="60"/>
        </StackLayout>

            <ScrollView VerticalOptions="FillAndExpand"
                        Orientation="Vertical"
                        VerticalScrollBarVisibility="Always">
            <StackLayout Grid.Row="1">
                <Frame>
                    <StackLayout>
                        <Label Text="Fibre optica"
                               FontAttributes="Bold"
                               TextColor="Black"
                               FontSize="Medium" />
                        <Image Source="https://i.ibb.co/x59jdzK/fibra-optica.jpg" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>