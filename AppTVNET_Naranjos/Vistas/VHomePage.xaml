<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTVNET_Naranjos.Vistas.VHomePage"
             IconImageSource="hogar.png" NavigationPage.HasNavigationBar="False">
    
    <Grid RowDefinitions="*,*" Margin="0,10,0,0">
        <StackLayout>
            <Image Source="Logo_remasterTVNET.png"
                   HeightRequest="60"/>
        </StackLayout>

        <StackLayout Grid.Row="1">
            <Frame  HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"
                    
                   CornerRadius="15">
                <StackLayout VerticalOptions="Start" HorizontalOptions="CenterAndExpand" >
                
                    <Label Text="cargando" HorizontalOptions="Center" />

                    <Image Source="planes_paquetes.jpg" />

                </StackLayout>
            </Frame>
        </StackLayout>
        
    </Grid>
</ContentPage>